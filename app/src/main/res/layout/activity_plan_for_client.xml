<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".planForClient.PreviewClientActivity">


    <TextView
        android:id="@+id/plan_for_client_name"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/plan_for_client_surname"
        android:layout_width="499dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/plan_for_client_name"
        android:layout_marginTop="119dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/plan_for_client_name"
        android:layout_marginTop="236dp"
        android:text="Aktualni plan"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageButton
        android:id="@+id/plan_for_client_button_for_add"
        android:layout_width="614dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="318dp"
        android:clickable="true"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ListView
        android:id="@+id/plan_for_client_lv_tasks"
        android:layout_width="757dp"
        android:layout_height="561dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp" />

    <ListView
        android:id="@+id/plan_for_client_lv_plan"
        android:layout_width="762dp"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp" />
</RelativeLayout>