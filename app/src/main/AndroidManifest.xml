            android:name=".activities.NurseInfoEditActivity"
            android:label="@string/title_activity_edit_nurse" />
        <activity
            android:name=".activities.ClientScreenActivity"
            android:label="@string/title_activity_preview_task" />
        <activity android:name=".activities.PreviewAllPlansActivity" />
        <activity
            android:name=".activities.ListOfDaysActivity"
            android:label="@string/title_activity_listOfDays" />
