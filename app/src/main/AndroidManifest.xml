<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomas.plan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".loginAndRegister.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Clients.ClientsActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addEditClient.AddEditClientActivity"
            android:label="@string/add_client"
            android:parentActivityName=".Clients.ClientsActivity" />
        <activity
            android:name=".viewClientInfo.ViewClientActivity"
            android:label="@string/client_info"
            android:parentActivityName=".Clients.ClientsActivity" />
        <activity
            android:name=".addEditPlan.AddEditPlanActivity"
            android:label="@string/add_plan" />
        <activity
            android:name=".viewPlanInfo.ViewPlanInfoActivity"
            android:label="@string/plan_info"
            android:parentActivityName=".Clients.ClientsActivity" />
        <activity
            android:name=".addEditTask.AddEditTaskActivity"
            android:label="@string/add_task"
            android:parentActivityName=".viewPlanInfo.ViewPlanInfoActivity" />
        <activity android:name=".selectedTask.SelectedTaskActivity" />
        <activity
            android:name=".planForClient.PreviewClientActivity"
            android:label="@string/preview_client"
            android:parentActivityName=".Clients.ClientsActivity" />
        <activity android:name=".nurseProfile.NurseProfileActivity" />
        <activity android:name=".nurseProfileEdit.NurseProfileEditActivity" />
        <activity
            android:name=".previewTask.PreviewTaskActivity"
            android:label="@string/title_activity_preview_task" />
        <activity android:name=".ui.previewplans.PreviewPlansActivity" />
    </application>

</manifest>